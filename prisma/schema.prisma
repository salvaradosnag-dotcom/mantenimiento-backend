
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nombre   String
  email    String @unique
  password String
  rol      Rol    @default(TECNICO)
}

model Evidencia {
  id           Int    @id @default(autoincrement())
  url          String
  mantencionId Int?
}

enum Rol {
  ADMIN
  TECNICO
  USUARIO
}


